<h1 style="color: black"><%= title %></h1>

        <p class="placeholder-glow" style="padding-bottom: 30px">
              <span class="placeholder col-12"></span>
        </p>
        
<div class="row">
    <div class="col">

        <table class="table table-striped table-bordered table-hover">
            <thead clas="thead" class="table-primary" style="color: black" >
                <tr>
                    <!--same as the number of items in each document in the your collectiom-->
                    <th scope="col" >#</th>
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Email Address</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

               <!--Repeatable row template-->
                <% for(let count=0; count < businessContacts.length; count++) { %>
                
                    <tr>
                        <th scope="row"><%= count + 1 %></th>
                        <td><%= businessContacts[count].contactName %></td>
                        <td><%= businessContacts[count].contactNumber %></td>
                        <td><%= businessContacts[count].emailAddress %></td>
                       
                        <td class="text-centre col-1">                            
                            <a href="edit/<%= businessContacts[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit </a>
                        </td>
                        
                        <td class="text-center col-1">
                                <a href="/delete/<%= businessContacts[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>                
              
            </tbody>
        </table>

    </div>
    <div class="col-md-offset-1 col-md-10 text-center">
                <ul class="pagination pagination-lg pager" id="myPager"></ul>
              </div>
</div>
</div>